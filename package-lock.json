const express = require("express");
const http = require("http");
const cors = require("cors");
const { Server } = require("socket.io");

const app = express();

// CORS and basic route
app.use(cors());
app.get("/", (req, res) => {
  res.send("VoIP signaling server is running");
});

const server = http.createServer(app);

const io = new Server(server, {
  cors: {
    origin: "*",
    methods: ["GET", "POST"],
  },
  transports: ["polling", "websocket"],
});

// Track connected users (optional)
const users = new Map();

io.on("connection", (socket) => {
  console.log("Client connected:", socket.id);
  users.set(socket.id, socket.id);

  // Caller sends: { to: "<socketId>" }
  socket.on("call", ({ to }) => {
    console.log(`Incoming call from ${socket.id} to ${to}`);
    io.to(to).emit("incoming-call", { from: socket.id });
  });

  // Callee sends: { from: "<callerSocketId>" }
  socket.on("accept-call", ({ from }) => {
    console.log(`Call accepted by ${socket.id} from ${from}`);
    io.to(from).emit("call-accepted", { from: socket.id });
  });

  socket.on("disconnect", () => {
    console.log("Client disconnected:", socket.id);
    users.delete(socket.id);
  });
});

// Use Render/Heroku port or 3000 locally
const PORT = process.env.PORT || 3000;
server.listen(PORT, () => {
  console.log("Server listening on port", PORT);
});
